{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest", "--config", "./setup/playwright-config.json"]
    },
    "typescript": {
      "command": "npx",
      "args": ["-y", "@mizchi/lsmcp", "--language=typescript"]
    },
    "o3": {
      "command": "npx",
      "args": ["o3-search-mcp"],
      "env": {
        "OPENAI_API_KEY": "${{ secrets.OPENAI_API_KEY }}",
        "SEARCH_CONTEXT_SIZE": "medium",
        "REASONING_EFFORT": "medium",
        "OPENAI_API_TIMEOUT": "600000"
      }
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "serena": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/oraios/serena", "serena-mcp-server", "--context", "ide-assistant", "--project", "${{ env.PWD }}", "--enable-web-dashboard", "false"]
    }
  }
}
